<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WalkingFragment">

    <com.example.mmht_my_mini_home_training.CustomToolbar
        android:id="@+id/walking_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        app:text="@string/menu_walking"
        app:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/walking_count_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="1dp"
            android:paddingEnd="10dp"
            android:text="@string/walking_count_tag"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/walking_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/walking_count_tag"
            android:text="@string/walking_count"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>